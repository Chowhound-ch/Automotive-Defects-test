<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="per.chowhound.hfut.mapper.FileMapper">
    
    <resultMap type="per.chowhound.hfut.domain.File" id="FileResult">
        <result property="fileId"    column="file_id"    />
        <result property="name"    column="name"    />
        <result property="md5"    column="md5"    />
        <result property="url"    column="url"    />
        <result property="type"    column="type"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
        <result property="isDelete"    column="is_delete"    />
    </resultMap>

    <sql id="selectFileVo">
        select file_id, name, md5, url, type, create_time, update_time, is_delete from file
    </sql>

    <select id="selectFileList" parameterType="per.chowhound.hfut.domain.File" resultMap="FileResult">
        <include refid="selectFileVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="md5 != null  and md5 != ''"> and md5 = #{md5}</if>
            <if test="url != null  and url != ''"> and url = #{url}</if>
            <if test="type != null  and type != ''"> and type = #{type}</if>
            <if test="isDelete != null "> and is_delete = #{isDelete}</if>
        </where>
    </select>
    
    <select id="selectFileByFileId" parameterType="Long" resultMap="FileResult">
        <include refid="selectFileVo"/>
        where file_id = #{fileId}
    </select>

    <insert id="insertFile" parameterType="per.chowhound.hfut.domain.File" useGeneratedKeys="true" keyProperty="fileId">
        insert into file
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="md5 != null and md5 != ''">md5,</if>
            <if test="url != null and url != ''">url,</if>
            <if test="type != null and type != ''">type,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="isDelete != null">is_delete,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="md5 != null and md5 != ''">#{md5},</if>
            <if test="url != null and url != ''">#{url},</if>
            <if test="type != null and type != ''">#{type},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="isDelete != null">#{isDelete},</if>
         </trim>
    </insert>

    <update id="updateFile" parameterType="per.chowhound.hfut.domain.File">
        update file
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="md5 != null and md5 != ''">md5 = #{md5},</if>
            <if test="url != null and url != ''">url = #{url},</if>
            <if test="type != null and type != ''">type = #{type},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="isDelete != null">is_delete = #{isDelete},</if>
        </trim>
        where file_id = #{fileId}
    </update>

    <delete id="deleteFileByFileId" parameterType="Long">
        delete from file where file_id = #{fileId}
    </delete>

    <delete id="deleteFileByFileIds" parameterType="String">
        delete from file where file_id in 
        <foreach item="fileId" collection="array" open="(" separator="," close=")">
            #{fileId}
        </foreach>
    </delete>
</mapper>